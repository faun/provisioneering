{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "aws_source_ami": "",
    "environment": "",
    "security_group_id": "",
    "subnet_id": "",
    "vpc_id": "",
    "aws_instance_size": "",
    "build_uuid": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "source_ami": "{{user `aws_source_ami`}}",
    "region": "us-east-1",
    "instance_type": "{{user `aws_instance_size`}}",
    "ssh_username": "ubuntu",
    "ami_name": "ihat {{timestamp}}",
    "security_group_id": "{{user `security_group_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "vpc_id": "{{user `vpc_id`}}",
    "tags": {
      "BuildUUID": "{{user `build_uuid`}}",
      "Name": "iHat",
      "OS": "Ubuntu",
      "Release": "14.04 LTS",
      "GeneratedAt": "{{isotime}}"
    }
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": "curl -sSL https://get.docker.com/ubuntu/ | sudo sh"
    },
    {
      "type": "shell",
      "inline": "sudo sh -c \"curl -L https://github.com/docker/fig/releases/download/1.0.1/fig-`uname -s`-`uname -m` > /usr/local/bin/fig\"; sudo chmod +x /usr/local/bin/fig"
    }
  ]
}
